{
    "name": "iamus-metaverse-server",
    "version": "1.0.1",
    "private": true,
    "description": "metaverse-server for Vircadia using ActivityPub",
    "author": "Robert Adams <misterblue@misterblue.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/Misterblue/Iamus"
    },
    "bugs": {
        "url": "https://github.com/Misterblue/Iamus/issues"
    },
    "homepage": "https://github.com/Misterblue/Iamus",
    "keywords": [
        "Vircadia",
        "ActivityPub",
        "virtual world"
    ],
    "license": "Apache-2.0",
    "main": "dist/index.js",

    "_moduleAliases": {
        "@Entities": "dist/Entities",
        "@Route-Tools": "dist/route-tools",
        "@Tools": "dist/Tools",
        "@Base": "dist"
    },

    "scripts": {
        "run": "node dist/index.js",
        "build": "npm-run-all -s \"clean:dist\" \"add-version\" \"build:iamus\"",
        "prebuild:iamus": "tslint -c tslint.json -p tsconfig.json --fix",
        "build:iamus": "tsc",
        "prestart": "npm run build",
        "start": "node .",
        "clean:dist": "rm -rf dist/*",
        "test": "echo \"Error: no test specified\" && exit 1",
        "add-version": "sed -i -e \"s='server-version':.*$='server-version': '$npm_package_version' // Updated by package.json script=\" src/config.ts"
    },
    "dependencies": {
        "@types/debug": "^4.1.5",
        "@types/glob": "^7.1.3",
        "@types/mongodb": "^3.5.25",
        "@types/multer": "^1.4.3",
        "activitypub-express": "file:../activitypub-express",
        "crypto": "^1.0.1",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "glob": "^7.1.6",
        "http-errors": "~1.6.3",
        "loglevel": "^1.6.8",
        "module-alias": "^2.2.2",
        "mongodb": "^3.5.9",
        "morgan": "~1.9.1",
        "multer": "^1.4.2",
        "unique-names-generator": "^4.3.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.7",
        "@types/http-errors": "^1.8.0",
        "@types/morgan": "^1.9.1",
        "@types/node": "^14.0.25",
        "npm-run-all": "^4.1.5",
        "tslint": "^6.1.2",
        "typescript": "^3.9.7"
    }
}
